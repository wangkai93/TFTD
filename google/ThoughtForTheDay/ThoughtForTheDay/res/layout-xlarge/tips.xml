<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/tips"
        style="@style/FillWrapWidgetStyle"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/title"
            style="@style/titleStyleTabMotorola"
            android:background="@drawable/howtouse_title_tab" />

        <RelativeLayout
            style="@style/quareLineStyleTabMotorola"
            android:background="@drawable/howtouse_line_tab" >

            <LinearLayout
                android:id="@+id/actionButtons"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:background="@drawable/switch_tab_btn_bg_nor"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/studyReadingsButton"
                    android:layout_width="340dp"
                    android:layout_height="55dp"
                    android:background="@drawable/switch_tab_btn_bg_left_press"
                    android:gravity="center"
                    android:text="@string/studyReadings"
                    android:textColor="@color/white"
                    android:textSize="28sp" />

                <Button
                    android:id="@+id/ecMaterialsButton"
                    android:layout_width="340dp"
                    android:layout_height="55dp"
                    android:background="@null"
                    android:gravity="center"
                    android:text="@string/ecMaterials"
                    android:textColor="@color/switch_tab_blue_bg"
                    android:textSize="28sp" />
            </LinearLayout>
            
            <WebView
                android:id="@+id/study_readings_web"
                style="@style/webViewStyleTabMotorola" />

            <WebView
                android:id="@+id/ec_materials_web"
                style="@style/webViewStyleTabMotorola"
                android:visibility="gone" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>