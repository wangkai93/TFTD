<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/info"
        style="@style/FillWrapWidgetStyle"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/title"
            style="@style/titleStyleTabMotorola"
            android:background="@drawable/info_title_tab" />

        <RelativeLayout
            style="@style/quareLineStyleTabMotorola"
            android:background="@drawable/info_line_tab" >

            <RelativeLayout
                style="@style/WrapContentWidgetStyle"
                android:layout_alignParentTop="true" >

                <ImageView
                    android:id="@+id/copyRightImage"
                    style="@style/FillWrapWidgetStyle"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="40dp"
                    android:src="@drawable/copyrights_tab_bg" />

                <TextView
                    android:id="@+id/copyrightLine1"
                    style="@style/infoViewTabMotorola"
                    android:layout_below="@id/copyRightImage"
                    android:text="@string/copyrightLine1" />

                <TextView
                    android:id="@+id/copyrightLine2"
                    style="@style/infoViewTabMotorola"
                    android:layout_below="@+id/copyrightLine1"
                    android:text="@string/copyrightLine2" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/bg"
                android:layout_width="fill_parent"
                android:layout_height="115dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/sound_controller" />

            <ImageView
                android:id="@+id/soundClose"
                style="@style/WrapContentWidgetStyle"
                 android:layout_alignRight="@id/bg"
                android:layout_alignTop="@id/bg"
                android:layout_marginTop="11dp"
                android:paddingRight="16dp"
                android:src="@drawable/switch_on" />

            <SeekBar
                 android:id="@+id/sound"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/bg"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="90dp"
                android:layout_marginRight="80dp"
                android:max="100"
                android:progress="50"/>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>