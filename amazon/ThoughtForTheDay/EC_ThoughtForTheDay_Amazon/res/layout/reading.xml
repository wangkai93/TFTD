<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        style="@style/FillWrapWidgetStyle"
        android:layout_weight="1"
        android:orientation="vertical" >

        <RelativeLayout
            style="@style/FillWrapWidgetStyle"
            android:layout_weight="1"
            android:gravity="center_vertical" >

            <Button
                android:id="@+id/favoritesBtn"
                android:layout_width="88dp"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/favorites_btn"
                android:gravity="center"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/title"
                style="@style/readTextView"
                android:layout_height="40dp"
                android:layout_alignBottom="@+id/leftButton"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/readings"
            style="@style/FillWrapWidgetStyle"
            android:layout_alignParentTop="true"
            android:layout_marginTop="40dp" >

            <RelativeLayout style="@style/FillParentWidgetStyle" >

                <WebView
                    android:id="@+id/event"
                    style="@style/ThoughtswebView"
                    android:gravity="center" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>